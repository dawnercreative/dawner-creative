---
import FooterNav from './FooterNav.astro';
---

<footer>
  <div class="work-with-us">
    <h2>Work with us</h2>
    <p
      >We would love to hear about your project!<br />Get in touch and we will
      get back to you shortly.</p
    >
    <a
      class="contact-button"
      href="/contact"
      >Contact us</a
    >
  </div>
  <div class="footer-bottom-container">
    <FooterNav />
    <div class="contact-info">
      <h4>Contact</h4>
      <p>+61 422 023 586</p>
      <p>Sunshine Coast, QLD, Australia</p>
      <p
        ><a href="mailto:hello@dawnercreative.com">hello@dawnercreative.com</a
        ></p
      >
    </div>
  </div>
</footer>

<style>
  footer {
    background-color: black;
    color: white;
    padding: 5rem 8rem;
  }
  .footer-bottom-container {
    display: flex;
    justify-content: space-between;
    justify-content: center;
  }

  footer h2 {
    color: #fff;
    font-family: Work Sans;
    font-size: 3.75rem;
    font-style: normal;
    font-weight: 500;
    line-height: 125%; /* 4.6875rem */
  }
</style>
